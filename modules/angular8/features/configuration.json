{
	"$schema": "https://raw.githubusercontent.com/liferay/liferay-js-toolkit/master/resources/schemas/configuration.schema.json",
	"system": {
		"category": "angular8",
		"name": "angular8",
		"fields": {
			"fruit": {
				"type": "string",
				"name": "Favorite fruit",
				"description": "Choose the fruit you like the most",
				"default": "orange",
				"options": {
					"orange": "An orange",
					"pear": "A pear",
					"apple": "An apple"
				}
			}
		}
	},
	"portletInstance": {
		"fields": {
			"drink": {
				"type": "string",
				"name": "Favorite drink",
				"description": "Choose the drink you like the most",
				"default": "water",
				"options": {
					"water": "Water",
					"wine": "Wine",
					"beer": "Beer"
				}
			}
		}
	}
}